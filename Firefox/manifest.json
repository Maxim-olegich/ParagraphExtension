{
  "manifest_version": 3,
  "name": "Text Formatter",
  "version": "1.0",
  "description": "Захватывает и форматирует текст в поле ввода.",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["https://my.websoft.ru/vchat/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "browser_specific_settings": {
  "gecko": {
    "id": "kapahgaiii7@yandex.ru",
    "strict_min_version": "109.0"
  }
}
}